@{
    ViewData["Title"] = "Verify Your Account";
}

<div class="text-center">
    <h2>Verify Your Account</h2>
    <p class="lead">An OTP has been sent to your email address: <strong>@ViewBag.Email</strong></p>
    <p>Please check your inbox and enter the 6-digit code below.</p>
</div>
<hr />

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                <form asp-action="VerifyRegistrationOtp">
                    <input type="hidden" name="email" value="@ViewBag.Email" />
                    <div class="form-group mb-3">
                        <label for="otp" class="form-label">6-Digit OTP</label>
                        <input name="otp" class="form-control form-control-lg text-center" maxlength="6" />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Verify and Complete Registration</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>