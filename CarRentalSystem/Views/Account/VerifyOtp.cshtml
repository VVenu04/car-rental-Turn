@{
    ViewData["Title"] = "Verify OTP";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height:100vh;">
    <div class="col-md-5">
        <div class="card card-glass border-0 shadow-lg rounded-4 text-light">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <div class="mb-3">
                        <span class="d-inline-flex align-items-center justify-content-center bg-primary text-white rounded-circle shadow-sm" style="width:60px; height:60px; font-size:24px;">
                            🔑
                        </span>
                    </div>
                    <h3 class="fw-bold">Verify OTP</h3>
                    <p class="text-muted small">We’ve sent a 6-digit code to</p>
                    <p class="fw-semibold text-info">@ViewBag.Email</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger rounded-3 shadow-sm text-center">@ViewBag.Error</div>
                }

                <form asp-action="VerifyOtp" method="post">
                    <input type="hidden" name="email" value="@ViewBag.Email" />

                    <div class="form-group mb-4">
                        <label for="otp" class="form-label fw-semibold">Enter 6-Digit OTP</label>
                        <input name="otp"
                               class="form-control form-control-lg text-center fw-bold rounded-3 shadow-sm"
                               maxlength="6"
                               placeholder="● ● ● ● ● ●"
                               style="letter-spacing:8px; font-size:24px;" required />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg rounded-3 fw-semibold shadow-sm">
                            ✅ Verify
                        </button>
                    </div>
                </form>
            </div>

            <div class="card-footer text-center bg-transparent border-0">
                <small class="text-muted">
                    Didn’t get an OTP?
                    <a asp-action="ForgotPassword" class="fw-semibold text-decoration-none text-info">Resend</a>
                </small>
            </div>
        </div>
    </div>
</div>
