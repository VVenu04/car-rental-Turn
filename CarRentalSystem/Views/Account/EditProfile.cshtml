@model CarRentalSystem.Models.User

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card luxury-card shadow-lg">
                <div class="card-header bg-gold text-white text-center">
                    <h2 class="fw-bold mb-0">Edit Profile</h2>
                </div>
                <div class="card-body">
                    <form asp-action="EditProfile">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="UserID" />

                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold"></label>
                            <input asp-for="FullName" class="form-control shadow-sm" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold"></label>
                            <input asp-for="PhoneNumber" class="form-control shadow-sm" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="newPassword" class="form-label fw-semibold">New Password (optional)</label>
                            <input name="newPassword" type="password" class="form-control shadow-sm" />
                            <small class="form-text text-muted">Leave blank to keep your current password.</small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <input type="submit" value="Save Changes" class="btn btn-gold shadow" />
                            <a asp-action="Profile" class="btn btn-secondary shadow">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial")
    }
}
