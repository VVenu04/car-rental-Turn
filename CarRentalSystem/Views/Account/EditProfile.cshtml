@model CarRentalSystem.Models.User

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="row justify-content-center">
    <div class="col-md-6 glass-effect p-4 rounded-3 text-light">

        <h2 class="text-center">Edit Profile</h2>
        <hr style="border-color: rgba(255, 255, 255, 0.2);" />

        <form asp-action="EditProfile">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="UserID" />

            <div class="form-group mb-3">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="newPassword" class="control-label">New Password (optional)</label>
                <div class="input-group">
                    <input name="newPassword" type="password" class="form-control" />
                    <button class="btn btn-outline-secondary toggle-password-button" type="button">
                        <i class="bi bi-eye-fill"></i>
                    </button>
                </div>
                <small class="form-text text-muted">Leave blank to keep your current password.</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Profile" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}