@model CarRentalSystem.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-4 fw-bold text-gradient">My Profile</h1>
        <p class="text-muted">View and manage your personal details & booking history</p>
        <hr class="w-25 mx-auto opacity-50" />
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success shadow-sm">@TempData["SuccessMessage"]</div>
    }

    <div class="row g-4">
        <!-- Profile Card -->
        <div class="col-md-4">
            <div class="card luxury-card shadow-lg h-100">
                <div class="card-header bg-gold text-white text-center">
                    <h4 class="fw-bold mb-0">Profile Details</h4>
                </div>
                <div class="card-body">
                    <p><strong>Full Name:</strong> @Model.FullName</p>
                    <p><strong>Username:</strong> @Model.Username</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                    <p><strong>Date Joined:</strong> @Model.DateJoined.ToShortDateString()</p>
                    <div class="d-grid mt-3">
                        <a asp-action="EditProfile" class="btn btn-gold shadow">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Booking History -->
        <div class="col-md-8">
            <div class="card luxury-card shadow-lg h-100">
                <div class="card-header bg-info text-white">
                    <h4 class="fw-bold mb-0">My Booking History</h4>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Car</th>
                                <th>Pickup Date</th>
                                <th>Return Date</th>
                                <th>Total Cost</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Bookings.Any())
                            {
                                @foreach (var booking in Model.Bookings.OrderByDescending(b => b.BookingDate))
                                {
                                    <tr>
                                        <td>@booking.Car.CarName</td>
                                        <td>@booking.PickupDate.ToShortDateString()</td>
                                        <td>@booking.ReturnDate.ToShortDateString()</td>
                                        <td>$@booking.TotalCost.ToString("F2")</td>
                                        <td>
                                            <span class="badge
                                                        @(booking.BookingStatus == "Confirmed" ? "bg-success" :
                                                                                                    booking.BookingStatus == "Completed" ? "bg-info" : "bg-secondary")">
                                        @booking.BookingStatus
                                    </span>
                                </td>
                            </tr>
                                                        }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">You have no booking history.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
