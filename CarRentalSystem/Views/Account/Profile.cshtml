@model CarRentalSystem.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<div class="text-center text-light mb-4">
    <h2 class="display-4">My Profile</h2>
    <hr style="border-color: rgba(255, 255, 255, 0.2);" />
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="row">
    <div class="col-md-4">
        <div class="card glass-effect text-light h-100">
            <div class="card-header bg-transparent">
                <h4>Profile Details</h4>
            </div>
            <div class="card-body">
                <p><strong>Full Name:</strong> @Model.FullName</p>
                <p><strong>Username:</strong> @Model.Username</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                <p><strong>Date Joined:</strong> @Model.DateJoined.ToShortDateString()</p>
                <a asp-action="EditProfile" class="btn btn-primary">Edit Profile</a>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Car</th>
                    <th>Pickup Date</th>
                    <th>Pickup Location</th>
                    <th>Return Date</th>
                    <th>Drop-off Location</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Bookings.Any())
                {
                    @foreach (var booking in Model.Bookings.OrderByDescending(b => b.BookingDate))
                    {
                        <tr>
                            <td>@booking.Car.CarName</td>
                            <td>@booking.PickupDate.ToShortDateString()</td>
                            <td>@booking.PickupLocation</td>
                            <td>@booking.ReturnDate.ToShortDateString()</td>
                            <td>@booking.ReturnLocation</td>
                            <td>
                                <span class="badge @(booking.BookingStatus == "Confirmed" ? "bg-success" : booking.BookingStatus == "Completed" ? "bg-info" : booking.BookingStatus == "Cancelled" ? "bg-danger" : "bg-secondary")">
                                    @booking.BookingStatus
                                </span>
                            </td>
                            <td>
                                @if (booking.BookingStatus == "Confirmed" && booking.PickupDate > DateTime.Today)
                                {
                                    <form asp-controller="Bookings" asp-action="Cancel" asp-route-id="@booking.BookingID" method="post" onsubmit="return confirm('Are you sure you want to cancel this booking?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">You have no booking history.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>