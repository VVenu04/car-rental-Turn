@{
    ViewData["Title"] = "Forgot Password";
}

<div class="text-center text-light mb-4">
    <h2 class="display-4">Forgot Password</h2>
    <p class="lead">Enter your email and we'll send you an OTP to reset your password.</p>
    <hr style="border-color: rgba(255, 255, 255, 0.2);" />
</div>

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card card-glass text-light">
            <div class="card-body">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-info">@ViewBag.Message</div>
                }
                <form asp-action="ForgotPassword" method="post">
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">Your Email Address</label>
                        <input name="email" type="email" class="form-control" required />
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Send OTP</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center bg-transparent">
                <a asp-action="Login">Back to Login</a>
            </div>
        </div>
    </div>
</div>