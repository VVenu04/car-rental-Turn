@{
    ViewData["Title"] = "Admin Login";
}



<div class="login-container">
    <div class="col-md-5">
        <div class="glass-frame">
            <div class="card glass-card">
                <div class="card-header">
                    <h2 class="text-center"><i class="bi bi-shield-lock-fill"></i> Admin Login</h2>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }
                    <form asp-action="Login" method="post">
                        <input type="hidden" name="loginType" value="Admin" />

                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="form-group mb-4">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password" name="password" required>
                                <button class="btn btn-outline-secondary toggle-password-button" type="button">
                                    <i class="bi bi-eye-fill"></i>
                                </button>
                            </div>
                        </div>
                        <div class="form-group text-center d-grid">
                            <button type="submit" class="btn btn-danger py-2">Login as Admin</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>