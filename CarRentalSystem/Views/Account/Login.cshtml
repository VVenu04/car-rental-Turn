@{
    ViewData["Title"] = "Login";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card luxury-card shadow-lg">
                <div class="card-header bg-gold text-white text-center">
                    <h2 class="fw-bold mb-0">Login</h2>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger shadow-sm" role="alert">
                            @ViewBag.Error
                        </div>
                    }
                    <form asp-action="Login" method="post">
                        <div class="form-group mb-3">
                            <label for="email" class="form-label fw-semibold">Email Address</label>
                            <input type="email" class="form-control shadow-sm" id="email" name="email" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="password" class="form-label fw-semibold">Password</label>
                            <input type="password" class="form-control shadow-sm" id="password" name="password" required>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-gold btn-lg w-100 shadow">Login</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-light">
                    <a asp-action="Register" class="text-decoration-none fw-semibold">Don't have an account? Register</a>
                </div>
            </div>
        </div>
    </div>
</div>
