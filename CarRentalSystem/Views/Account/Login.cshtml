@{
    ViewData["Title"] = "Login";
}

<style>

/* Main container to center the login card */
.login-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 85vh;
}

/* The outer frame for padding */
.glass-frame {
    background: rgba(10, 25, 47, 0.25);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.3);
    padding: 30px;
}

/* The inner "Glass View" Card */
.glass-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: white;
    box-shadow: none;
}

    .glass-card .card-header, .glass-card .card-footer {
        background: none;
        border-color: rgba(255, 255, 255, 0.2);
    }

    .glass-card .form-label {
        color: rgba(255, 255, 255, 0.9);
    }

    .glass-card .form-control {
        background-color: white;
        border: 1px solid #ced4da;
        color: #212529;
    }

    .glass-card .card-footer a {
        color: #8be9fd;
        text-decoration: none;
    }


body {
    background-image: url('/images/cars/22.jpg');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    font-family: 'Roboto', sans-serif;
}


</style>




<div class="login-container">
    <div class="col-md-5">
        <div class="glass-frame">
            <div class="card glass-card">
                <div class="card-header">
                    <h2 class="text-center">Customer Login</h2>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Error
                        </div>
                    }
                    <form asp-action="Login" method="post">
                        <input type="hidden" name="loginType" value="Customer" />

                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="form-group mb-4">
                            <label for="password" class="form-label">Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password" name="password" required>
                                <button class="btn btn-outline-secondary toggle-password-button" type="button">
                                    <i class="bi bi-eye-fill"></i>
                                </button>
                                <div class="text-center mt-3">
                                    <a asp-action="ForgotPassword">Forgot Password?</a>
                                </div>
                            </div>
                        </div>
                        <div class="form-group text-center d-grid">
                            <button type="submit" class="btn btn-primary py-2">Login</button>
                        </div>
                        
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Register">Don't have an account? Register</a>
                </div>
            </div>
        </div>
    </div>
</div>