@model CarRentalSystem.Models.Car

@{
    ViewData["Title"] = "Create Car";
}

<div class= "text-center text-light mb-4">
    <h1>Add New Car</h1>
    <hr style="border-color: rgba(255, 255, 255, 0.2);" />
</div>

<div class="row justify-content-center">
    <div class="col-md-8 glass-effect p-4 rounded-3 text-light">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CarName" class="control-label"></label>
                    <input asp-for="CarName" class="form-control" />
                    <span asp-validation-for="CarName" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="CarModel" class="control-label"></label>
                    <input asp-for="CarModel" class="form-control" type="number" />
                    <span asp-validation-for="CarModel" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CarType" class="control-label"></label>
                    <input asp-for="CarType" class="form-control" />
                    <span asp-validation-for="CarType" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DailyRate" class="control-label"></label>
                    <input asp-for="DailyRate" class="form-control" />
                    <span asp-validation-for="DailyRate" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Transmission" class="control-label"></label>
                    <select asp-for="Transmission" class="form-select" asp-items="@(new SelectList(ViewBag.TransmissionOptions))">
                        <option value="">-- Select Transmission --</option>
                    </select>
                    <span asp-validation-for="Transmission" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="FuelType" class="control-label"></label>
                    <select asp-for="FuelType" class="form-select" asp-items="@(new SelectList(ViewBag.FuelTypeOptions))">
                        <option value="">-- Select Fuel Type --</option>
                    </select>
                    <span asp-validation-for="FuelType" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="SeatingCapacity" class="control-label"></label>
                    <input asp-for="SeatingCapacity" class="form-control" />
                    <span asp-validation-for="SeatingCapacity" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Mileage" class="control-label"></label>
                    <input asp-for="Mileage" class="form-control" />
                    <span asp-validation-for="Mileage" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PickupLocationsString" class="control-label"></label>
                    <textarea asp-for="PickupLocationsString" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="PickupLocationsString" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DropoffLocationsString" class="control-label"></label>
                    <textarea asp-for="DropoffLocationsString" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="DropoffLocationsString" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label for="imageFile" class="control-label">Car Image</label>
                <input name="imageFile" type="file" class="form-control" />
            </div>
            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}