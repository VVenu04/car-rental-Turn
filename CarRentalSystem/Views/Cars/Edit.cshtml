@model CarRentalSystem.Models.Car

@{
    ViewData["Title"] = "Edit Car";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-gradient">Edit Car Details</h1>
        <p class="lead text-muted">Update car information and availability</p>
        <hr class="w-25 mx-auto opacity-50" />
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg luxury-card p-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="CarID" />
                    <input type="hidden" asp-for="ImageUrl" />
                    <input type="hidden" asp-for="DateAdded" />

                    <!-- Image Preview -->
                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            <p class="fw-semibold">Current Image:</p>
                            <img src="@Url.Content(Model.ImageUrl)" class="img-thumbnail rounded-4 shadow-sm" style="max-width: 200px;" />
                        </div>
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="imageFile" class="form-label fw-semibold">Upload New Image (Optional)</label>
                                <input name="imageFile" type="file" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <!-- Car Info -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="CarName" class="form-label fw-semibold"></label>
                            <input asp-for="CarName" class="form-control" />
                            <span asp-validation-for="CarName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="CarModel" class="form-label fw-semibold">Model Year</label>
                            <input asp-for="CarModel" class="form-control" type="number" />
                            <span asp-validation-for="CarModel" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="CarType" class="form-label fw-semibold"></label>
                            <input asp-for="CarType" class="form-control" />
                            <span asp-validation-for="CarType" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DailyRate" class="form-label fw-semibold"></label>
                            <input asp-for="DailyRate" class="form-control" />
                            <span asp-validation-for="DailyRate" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Transmission" class="form-label fw-semibold"></label>
                            <input asp-for="Transmission" class="form-control" />
                            <span asp-validation-for="Transmission" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="FuelType" class="form-label fw-semibold"></label>
                            <input asp-for="FuelType" class="form-control" />
                            <span asp-validation-for="FuelType" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="SeatingCapacity" class="form-label fw-semibold"></label>
                            <input asp-for="SeatingCapacity" class="form-control" />
                            <span asp-validation-for="SeatingCapacity" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Mileage" class="form-label fw-semibold"></label>
                            <input asp-for="Mileage" class="form-control" />
                            <span asp-validation-for="Mileage" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="col-12 form-check mb-3">
                            <input class="form-check-input" asp-for="IsAvailable" />
                            <label class="form-check-label fw-semibold">@Html.DisplayNameFor(model => model.IsAvailable)</label>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <input type="submit" value="Save Changes" class="btn btn-gold shadow" />
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial")
}
}
