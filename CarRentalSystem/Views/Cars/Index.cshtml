@model IEnumerable<CarRentalSystem.Models.Car>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Our Fleet";
    var userRole = HttpContextAccessor.HttpContext.Session.GetString("Role");
}

@if (userRole == "Admin")
{
   

    @* Below for the side bar in the Admin side page ( not include in the separate admin side _Admin layout.cshtml file (that was removed ) ) *@

    <div class="page-content-wrapper">
        <button class="btn glass-effect sidebar-toggle" type="button" data-bs-toggle="offcanvas" data-bs-target="#adminSidebar" aria-controls="adminSidebar">
            <i class="bi bi-list"></i>
        </button>

        <div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="adminSidebar" aria-labelledby="adminSidebarLabel" style="width: 280px;">
            <div class="offcanvas-header border-bottom border-secondary justify-content-center">
                <h4 class="offcanvas-title" id="adminSidebarLabel">Action Center</h4>
                <button type="button" class="btn-close btn-close-white position-absolute end-0 me-3" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <p class="text-white-50">Manage your system with these quick links.</p>
                <div class="nav flex-column offcanvas-nav">
                    <a href="@Url.Action("Index", "Cars")" class="nav-link">
                        <i class="bi bi-car-front-fill"></i> Manage Cars
                    </a>
                    <a href="@Url.Action("Index", "Bookings")" class="nav-link">
                        <i class="bi bi-journal-text"></i> View All Bookings
                    </a>
                    <a href="@Url.Action("ViewCustomers", "Admin")" class="nav-link">
                        <i class="bi bi-people-fill"></i> View Customers
                    </a>
                    <a href="@Url.Action("ManageContactInfo", "Admin")" class="nav-link">
                        <i class="bi bi-info-circle-fill"></i> Manage Site Info
                    </a>
                    <a href="@Url.Action("Dashboard", "Admin")" class="nav-link">
                        <i class="bi bi-speedometer2"></i> Back To DashBoard
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<div class="text-center text-light mb-4">
    <h1 class="display-4 fw-bold">Our Fleet</h1>
    <p class="lead">
        @if (userRole == "Admin")
        {
            <span>Manage all the cars in your fleet</span>

        }
        else
        {
            <span>Choose from our wide selection of high-quality rental cars</span>
        }
    </p>
</div>

@if (userRole == "Admin")
{
    <div class="glass-effect p-4 rounded-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="text-light mb-0">Manage Fleet</h3>
            <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New Car</a>
        </div>

        <form asp-controller="Cars" asp-action="Index" method="get" class="mb-3">
            <div class="input-group">
                <input type="text" name="searchString" value="@ViewData["CurrentSearch"]" class="form-control" placeholder="Search by name, model, or type...">
                <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Search</button>
                <a asp-action="Index" class="btn btn-outline-light">Clear Filter</a>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Car Name & Model</th>
                        <th>Registration No</th>
                        <th>Daily Rate</th>
                        <th>Availability</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@Url.Content(item.ImageUrl)" alt="@item.CarName" style="width: 120px; height: 70px; object-fit: cover; border-radius: 5px;" />
                            </td>
                            <td>
                                <strong>@item.CarName</strong><br />
                                <small class="text-muted">@item.CarModel</small>

                            </td>

                            <td>@item.RegistrationNumber</td>
                            <td>@item.DailyRate.ToString("C")</td>
                            <td>
                                @if (item.IsAvailable)
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Unavailable</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.CarID" class="btn btn-smn-outline-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.CarID" class="btn btn-sm btn-o btutline-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.CarID" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card p-3 mb-4 shadow-sm glass-effect">
        <form asp-controller="Cars" asp-action="Index" method="get">
            <div class="row g-2 align-items-end">
                <div class="col-md">
                    <label class="form-label small text-light">Search by Name</label>
                    <input type="text" name="searchString" value="@ViewData["CurrentSearch"]" class="form-control">
                </div>
                <div class="col-md">
                    <label class="form-label small text-light">Car Type</label>
                    <select name="carType" class="form-select" asp-items="@(new SelectList(ViewBag.CarTypes, ViewData["CurrentCarType"]))">
                        <option value="">All</option>
                    </select>
                </div>
                <div class="col-md">
                    <label class="form-label small text-light">Transmission</label>
                    <select name="transmission" class="form-select" asp-items="@(new SelectList(ViewBag.Transmissions, ViewData["CurrentTransmission"]))">
                        <option value="">All</option>
                    </select>
                </div>
                <div class="col-md">
                    <label class="form-label small text-light">Fuel Type</label>
                    <select name="fuelType" class="form-select" asp-items="@(new SelectList(ViewBag.FuelTypes, ViewData["CurrentFuelType"]))">
                        <option value="">All</option>
                    </select>
                </div>
                <div class="col-md">
                    <label class="form-label small text-light">Min. Seats</label>
                    <select name="seatingCapacity" class="form-select">
                        <option value="" selected="@(ViewData["CurrentSeatingCapacity"] == null)">Any</option>
                        <option value="2" selected="@((int?)ViewData["CurrentSeatingCapacity"] == 2)">2+</option>
                        <option value="4" selected="@((int?)ViewData["CurrentSeatingCapacity"] == 4)">4+</option>
                        <option value="5" selected="@((int?)ViewData["CurrentSeatingCapacity"] == 5)">5+</option>
                        <option value="7" selected="@((int?)ViewData["CurrentSeatingCapacity"] == 7)">7+</option>
                    </select>
                </div>
                <div class="col-md-auto">
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
                <div class="col-md-auto">
                    <a asp-action="Index" class="btn btn-outline-light w-100">Reset</a>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 car-card card-glass">
                    <img src="@Url.Content(item.ImageUrl)" class="card-img-top" alt="@item.CarName" style="height: 220px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.CarName</h5>
                        <p class="card-text text-muted">@item.CarModel Year &bull; @item.CarType</p>
                        <div class="d-flex justify-content-around my-3">
                            <div class="spec-item" title="Seating Capacity">
                                <i class="bi bi-people-fill"></i> @item.SeatingCapacity
                            </div>
                            <div class="spec-item" title="Transmission">
                                <i class="bi bi-gear-fill"></i> @item.Transmission
                            </div>
                            <div class="spec-item" title="Fuel Type">
                                <i class="bi bi-fuel-pump-fill"></i> @item.FuelType
                            </div>
                        </div>
                        <div class="text-center my-3">
                            <span class="card-price">@item.DailyRate.ToString("C")</span>
                            <span class="per-day">/ day</span>
                        </div>
                        <div class="mt-auto pt-3 text-center">
                            @if (item.IsAvailable)
                            {
                                <a asp-controller="Bookings" asp-action="Create" asp-route-carId="@item.CarID" class="btn btn-primary w-100">Book Now</a>
                            }
                            else
                            {
                                <button class="btn btn-secondary w-100" disabled>Not Available</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}