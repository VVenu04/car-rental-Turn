@model IEnumerable<CarRentalSystem.Models.Car>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Our Fleet";
    var userRole = HttpContextAccessor.HttpContext.Session.GetString("Role");
}

<h1>Our Fleet</h1>
<p>
    @if (userRole == "Admin")
    {
        <span>Manage all the cars in your fleet.</span>
    }
    else
    {
        <span>Choose from our wide selection of high-quality rental cars.</span>
    }
</p>


@if (userRole == "Admin")
{
    // ADMIN VIEW: Table/List Layout
    <p>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New Car</a>
    </p>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Car Name & Model</th>
                <th>Daily Rate</th>
                <th>Availability</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Content(item.ImageUrl)" alt="@item.CarName" style="width: 120px; height: 70px; object-fit: cover; border-radius: 5px;" />
                    </td>
                    <td>
                        <strong>@item.CarName</strong><br />
                        <small class="text-muted">@item.CarModel</small>
                    </td>
                    <td>@item.DailyRate.ToString("C")</td>
                    <td>
                        @if (item.IsAvailable)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Unavailable</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CarID" class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.CarID" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.CarID" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    // CUSTOMER VIEW: Card Layout
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@Url.Content(item.ImageUrl)" class="card-img-top" alt="@item.CarName" style="height: 220px; object-fit: cover;" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.CarName (@item.CarModel)</h5>
                        <p class="card-text">@item.Description</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">Type: @item.CarType</li>
                            <li class="list-group-item"><strong>Rate: @item.DailyRate.ToString("C") / day</strong></li>
                        </ul>
                        <div class="mt-auto pt-3 text-center">
                            @if (item.IsAvailable)
                            {
                                <a asp-controller="Bookings" asp-action="Create" asp-route-carId="@item.CarID" class="btn btn-primary">Book Now</a>
                            }
                            else
                            {
                                <button class="btn btn-secondary" disabled>Not Available</button>
                            }
                            <a asp-action="Details" asp-route-id="@item.CarID" class="btn btn-outline-secondary">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}