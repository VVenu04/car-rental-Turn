@model CarRentalSystem.Models.Car

@{
    ViewData["Title"] = Model.CarName + " Details";
}

<div>
    <h1>@Model.CarName (@Model.CarModel)</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <img src="@Url.Content(Model.ImageUrl)" alt="@Model.CarName" class="img-fluid rounded" />
        </div>
        <div class="col-md-6">
            <p>@Model.Description</p>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Daily Rate
                    <span class="badge bg-primary rounded-pill">$@Model.DailyRate.ToString("F2")</span>
                </li>
                <li class="list-group-item"><strong>Type:</strong> @Model.CarType</li>
                <li class="list-group-item"><strong>Transmission:</strong> @Model.Transmission</li>
                <li class="list-group-item"><strong>Fuel:</strong> @Model.FuelType</li>
                <li class="list-group-item"><strong>Seats:</strong> @Model.SeatingCapacity</li>
                <li class="list-group-item">
                    <strong>Availability:</strong>
                    @if (Model.IsAvailable)
                    {
                        <span class="text-success">Available</span>
                    }
                    else
                    {
                        <span class="text-danger">Not Available</span>
                    }
                </li>
            </ul>
            <div class="mt-4">
                @if (Model.IsAvailable)
                {
                    <a asp-controller="Bookings" asp-action="Create" asp-route-carId="@Model.CarID" class="btn btn-success btn-lg">Book This Car</a>
                }
                <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
            </div>
        </div>
    </div>
</div>