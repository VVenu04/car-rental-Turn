@model CarRentalSystem.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<h1>Delete Confirmation</h1>

<h3 class="text-danger">Are you sure you want to delete this car?</h3>
<div>
    <h4>@Model.CarName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CarModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CarModel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DailyRate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DailyRate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CarID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>