@model IEnumerable<CarRentalSystem.Models.Booking>

@{
    ViewData["Title"] = "All Bookings";
}

<h1>All Bookings</h1>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Customer</th>
            <th>Car</th>
            <th>Pickup Date</th>
            <th>Return Date</th>
            <th>Total Cost</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Car.CarName)
                </td>
                <td>
                    @item.PickupDate.ToShortDateString()
                </td>
                <td>
                    @item.ReturnDate.ToShortDateString()
                </td>
                <td>
                    $@item.TotalCost.ToString("F2")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingStatus)
                </td>
            </tr>
        }
    </tbody>
</table>