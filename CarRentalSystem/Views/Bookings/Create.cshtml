@model CarRentalSystem.Models.Booking

@{
    ViewData["Title"] = "Book a Car";
}

<h1>Book: @Model.Car.CarName</h1>
<p>Complete the form below to finalize your booking.</p>
<hr />
<div class="row">
    <div class="col-md-7">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="CarID" />

            <div class="row">
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="PickupDate" class="control-label"></label>
                    <input asp-for="PickupDate" class="form-control" type="date" />
                    <span asp-validation-for="PickupDate" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="ReturnDate" class="control-label"></label>
                    <input asp-for="ReturnDate" class="form-control" type="date" />
                    <span asp-validation-for="ReturnDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="PickupLocation" class="control-label"></label>
                    <input asp-for="PickupLocation" class="form-control" />
                    <span asp-validation-for="PickupLocation" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="ReturnLocation" class="control-label"></label>
                    <input asp-for="ReturnLocation" class="form-control" />
                    <span asp-validation-for="ReturnLocation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SpecialRequirements" class="control-label"></label>
                <textarea asp-for="SpecialRequirements" class="form-control" rows="3"></textarea>
                <span asp-validation-for="SpecialRequirements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm Booking" class="btn btn-primary" />
                <a asp-controller="Cars" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
    <div class="col-md-5">
        <div class="card">
            <img src="@Url.Content(Model.Car.ImageUrl)" class="card-img-top" alt="@Model.Car.CarName">
            <div class="card-body">
                <h5 class="card-title">@Model.Car.CarName</h5>
                <p class="card-text">Daily Rate: <strong>$@Model.Car.DailyRate.ToString("F2")</strong></p>
                <p class="card-text text-muted">A preliminary cost will be calculated upon submission.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}