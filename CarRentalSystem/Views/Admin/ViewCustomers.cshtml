@model IEnumerable<CarRentalSystem.Models.User>

@{
    ViewData["Title"] = "Manage Customers";
}

<h1>Manage Customers</h1>
<p>Here is a list of all registered customers in the system.</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Full Name</th>
            <th>Email Address</th>
            <th>Phone Number</th>
            <th>Date Joined</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.DateJoined.ToShortDateString()</td>
                <td class="text-end">
                    <a asp-action="CustomerDetails" asp-route-id="@user.UserID" class="btn btn-sm btn-info">
                        <i class="bi bi-person-lines-fill"></i> View Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>