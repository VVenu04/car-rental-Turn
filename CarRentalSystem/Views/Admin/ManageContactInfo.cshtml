@model CarRentalSystem.Models.SiteSetting

@{
    ViewData["Title"] = "Manage Contact Information";
}


@* Below for the side bar in the Admin side page ( not include in the separate admin side _Admin layout.cshtml file (that was removed ) ) *@

<div class="page-content-wrapper">
    <button class="btn glass-effect sidebar-toggle" type="button" data-bs-toggle="offcanvas" data-bs-target="#adminSidebar" aria-controls="adminSidebar">
        <i class="bi bi-list"></i>
    </button>

    <div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="adminSidebar" aria-labelledby="adminSidebarLabel" style="width: 280px;">
        <div class="offcanvas-header border-bottom border-secondary justify-content-center">
            <h4 class="offcanvas-title" id="adminSidebarLabel">Action Center</h4>
            <button type="button" class="btn-close btn-close-white position-absolute end-0 me-3" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <p class="text-white-50">Manage your system with these quick links.</p>
            <div class="nav flex-column offcanvas-nav">
                <a href="@Url.Action("Index", "Cars")" class="nav-link">
                    <i class="bi bi-car-front-fill"></i> Manage Cars
                </a>
                <a href="@Url.Action("Index", "Bookings")" class="nav-link">
                    <i class="bi bi-journal-text"></i> View All Bookings
                </a>
                <a href="@Url.Action("ViewCustomers", "Admin")" class="nav-link">
                    <i class="bi bi-people-fill"></i> View Customers
                </a>
                <a href="@Url.Action("ManageContactInfo", "Admin")" class="nav-link">
                    <i class="bi bi-info-circle-fill"></i> Manage Site Info
                </a>
                <a href="@Url.Action("Dashboard", "Admin")" class="nav-link">
                    <i class="bi bi-speedometer2"></i> Back To DashBoard
                </a>
            </div>
        </div>
    </div>
</div>


<div class="text-center text-light mb-4">
    <h2 class="display-4 fw-bold">Manage Contact Information</h2>
    <hr style="border-color: rgba(255, 255, 255, 0.2);" />
    <p>Update the public contact details for the website</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-6 glass-effect glass-sky-blue zoom-on-hover p-4 rounded-3 text-light">
        <form asp-action="ManageContactInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="SettingID" />

            <div class="form-group mb-3">
                <label asp-for="ContactEmail" class="control-label"></label>
                <input asp-for="ContactEmail" class="form-control" />
                <span asp-validation-for="ContactEmail" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ContactPhone" class="control-label"></label>
                <input asp-for="ContactPhone" class="form-control" />
                <span asp-validation-for="ContactPhone" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
                <a asp-action="Dashboard" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}