@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    /* ====== Luxury Design CSS ====== */
    .text-gradient {
        background: linear-gradient(90deg, #0d6efd, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .luxury-card {
        border: none;
        border-radius: 1.25rem;
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.85);
        transition: all 0.3s ease-in-out;
    }

        .luxury-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

    .icon-circle {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 70px;
        height: 70px;
        border-radius: 50%;
        font-size: 2rem;
        color: #fff;
    }

    .bg-primary {
        background: #0d6efd;
    }

    .bg-success {
        background: #198754;
    }

    .bg-info {
        background: #0dcaf0;
    }

    .bg-warning {
        background: #ffc107;
    }

    .quick-link-card:hover .card {
        background: linear-gradient(135deg, #f8f9fa, #eef2f7);
        transform: scale(1.05);
    }

    .quick-link-card h6 {
        color: #333;
    }

   

    }
</style>

<div class="container my-5">
    <!-- Dashboard Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-gradient">Admin Dashboard</h1>
        <p class="lead text-muted">Manage cars, bookings & customers with ease</p>
        <hr class="w-25 mx-auto opacity-50" />
    </div>

    <!-- Stats Cards -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card luxury-card shadow-lg h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="fw-semibold text-uppercase text-muted">Total Cars</h6>
                        <h2 class="display-5 fw-bold">@ViewBag.TotalCars</h2>
                    </div>
                    <div class="icon-circle bg-primary">
                        <i class="bi bi-car-front-fill"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card luxury-card shadow-lg h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="fw-semibold text-uppercase text-muted">Available Cars</h6>
                        <h2 class="display-5 fw-bold text-success">@ViewBag.AvailableCars</h2>
                    </div>
                    <div class="icon-circle bg-success">
                        <i class="bi bi-check2-circle"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card luxury-card shadow-lg h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="fw-semibold text-uppercase text-muted">Total Bookings</h6>
                        <h2 class="display-5 fw-bold text-info">@ViewBag.TotalBookings</h2>
                    </div>
                    <div class="icon-circle bg-info">
                        <i class="bi bi-journal-text"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="mt-5">
        <h3 class="fw-bold text-gradient mb-4"><i class="bi bi-lightning-charge-fill me-2"></i>Quick Links</h3>
        <div class="row g-4">
            <div class="col-md-3">
                <a asp-controller="Cars" asp-action="Index" class="quick-link-card text-decoration-none">
                    <div class="card shadow-lg h-100 text-center luxury-card">
                        <div class="card-body py-4">
                            <i class="bi bi-pencil-square fs-1 text-primary"></i>
                            <h6 class="mt-3 fw-semibold">Manage Cars</h6>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a asp-controller="Bookings" asp-action="Index" class="quick-link-card text-decoration-none">
                    <div class="card shadow-lg h-100 text-center luxury-card">
                        <div class="card-body py-4">
                            <i class="bi bi-card-list fs-1 text-success"></i>
                            <h6 class="mt-3 fw-semibold">View All Bookings</h6>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a asp-controller="Admin" asp-action="ViewCustomers" class="quick-link-card text-decoration-none">
                    <div class="card shadow-lg h-100 text-center luxury-card">
                        <div class="card-body py-4">
                            <i class="bi bi-people-fill fs-1 text-info"></i>
                            <h6 class="mt-3 fw-semibold">View Customers</h6>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-3">
                <a asp-controller="Admin" asp-action="ManageContactInfo" class="quick-link-card text-decoration-none">
                    <div class="card shadow-lg h-100 text-center luxury-card">
                        <div class="card-body py-4">
                            <i class="bi bi-info-circle-fill fs-1 text-warning"></i>
                            <h6 class="mt-3 fw-semibold">Manage Contact Info</h6>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap icons if not already -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
