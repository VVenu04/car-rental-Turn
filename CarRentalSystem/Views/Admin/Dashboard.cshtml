@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1 class="display-4">Admin Dashboard</h1>
<p class="lead">Welcome to the management portal.</p>
<hr />

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card text-white bg-primary h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Total Cars</h5>
                        <h2 class="display-5">@ViewBag.TotalCars</h2>
                    </div>
                    <i class="bi bi-car-front-fill" style="font-size: 3rem;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card text-white bg-success h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Available Cars</h5>
                        <h2 class="display-5">@ViewBag.AvailableCars</h2>
                    </div>
                    <i class="bi bi-check2-circle" style="font-size: 3rem;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card text-white bg-info h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title">Total Bookings</h5>
                        <h2 class="display-5">@ViewBag.TotalBookings</h2>
                    </div>
                    <i class="bi bi-journal-text" style="font-size: 3rem;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

