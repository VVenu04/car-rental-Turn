@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="admin-dashboard-background d-flex align-items-center justify-content-center text-center">

    <button class="btn glass-effect sidebar-toggle" type="button" data-bs-toggle="offcanvas" data-bs-target="#adminSidebar" aria-controls="adminSidebar">
        <i class="bi bi-list"></i>
    </button>

    <div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="adminSidebar" aria-labelledby="adminSidebarLabel" style="width: 280px;">
        <div class="offcanvas-header border-bottom border-secondary justify-content-center">
            <h4 class="offcanvas-title" id="adminSidebarLabel">Action Center</h4>
            <button type="button" class="btn-close btn-close-white position-absolute end-0 me-3" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <p class="text-white-50">Manage your system with these quick links.</p>
            <div class="nav flex-column offcanvas-nav">
                <a href="@Url.Action("Index", "Cars")" class="nav-link">
                    <i class="bi bi-car-front-fill"></i> Manage Cars
                </a>
                <a href="@Url.Action("Index", "Bookings")" class="nav-link">
                    <i class="bi bi-journal-text"></i> View All Bookings
                </a>
                <a href="@Url.Action("ViewCustomers", "Admin")" class="nav-link">
                    <i class="bi bi-people-fill"></i> View Customers
                </a>
                <a href="@Url.Action("ManageContactInfo", "Admin")" class="nav-link">
                    <i class="bi bi-info-circle-fill"></i> Manage Site Info
                </a>
            </div>
        </div>
    </div>

    <div class="container">
        <h1 class="display-3 fw-bold text-light dashboard-title-text">Admin Dashboard</h1>
        <p class="lead text-white-50 fs-4 dashboard-title-text">Welcome to the management portal.</p>
        <hr class="w-50 mx-auto" />

        <div class="row mt-4 justify-content-center">

            <div class="col-md-4 mb-4">
                <div class="card glass-effect shadow-lg h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title fw-bold">Total Cars</h5>
                                <h2 class="display-4 fw-bold">@ViewBag.TotalCars</h2>
                            </div>
                            <i class="bi bi-car-front-fill text-warning" style="font-size: 4rem;"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-center">
                        <a href="@Url.Action("Index", "Cars")" class="text-white stretched-link text-decoration-none">
                            View All Cars <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card glass-effect shadow-lg h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title fw-bold">Total Customers</h5>
                                <h2 class="display-4 fw-bold">@ViewBag.TotalCustomers</h2>
                            </div>
                            <i class="bi bi-people-fill text-white" style="font-size: 4rem;"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-center">
                        <a href="@Url.Action("ViewCustomers", "Admin")" class="text-white stretched-link text-decoration-none">
                            View All Customers <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card glass-effect shadow-lg h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title fw-bold">Total Bookings</h5>
                                <h2 class="display-4 fw-bold">@ViewBag.TotalBookings</h2>
                            </div>
                            <i class="bi bi-journal-text text-white" style="font-size: 4rem;"></i>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 text-center">
                        <a href="@Url.Action("Index", "Bookings")" class="text-white stretched-link text-decoration-none">
                            View All Bookings <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>