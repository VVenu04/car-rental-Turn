@model IEnumerable<CarRentalSystem.Models.Car>
@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/cars/carousel4.png" class="d-block w-100" alt="Reliable Cars" style="max-height: 80vh; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block hero-caption">
                <h1 class="display-3 fw-bold">Welcome to DriveEase</h1>
                <p class="lead fs-4">Your journey to the perfect rental car starts here.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/cars/carousel2.png" class="d-block w-100" alt="Affordable Rates" style="max-height: 80vh; object-fit: cover;">
            <div class="carousel-caption d-none d-md-block hero-caption">
                <h1 class="display-3 fw-bold">Affordable and Flexible Rates</h1>
                <p class="lead fs-4">Rent by the day, week, or month.</p>
                <a class="btn btn-light btn-lg mt-3" asp-controller="Account" asp-action="Register" role="button">Join Us Today!</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<div class="container my-5">
    <div class="search-panel-glass" style="margin-top: -100px; position: relative; z-index: 10;">
        <form asp-controller="Cars" asp-action="Index" method="get">
            <div class="input-group input-group-lg">
                <input type="text" name="searchString" class="form-control" placeholder="Search for a car (e.g., 'Toyota', 'SUV', '2023')...">
                <button class="btn btn-primary px-5" type="submit"><i class="bi bi-search"></i> Find</button>
            </div>
        </form>
        <div class="text-center mt-4">
            <a class="btn btn-outline-light" asp-controller="Cars" asp-action="Index" role="button">Or Browse All Cars</a>
        </div>
    </div>

    <div class="mt-5 pt-5 text-center">
        <h2 class="display-4 mb-5 featured-cars-title">Featured Cars</h2>

        <div class="row text-start">
            @foreach (var car in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card card-glass h-100 rounded-3">
                        <img src="@Url.Content(car.ImageUrl)" class="card-img-top rounded-top" alt="@car.CarName" style="height: 220px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@car.CarName</h5>
                            <p class="card-text">
                                <span class="badge bg-primary me-2">@car.CarType</span>
                                <span class="badge bg-secondary">@car.Transmission</span>
                            </p>
                            <p class="card-text text-success fs-5 mt-auto">
                                <strong>$@car.DailyRate.ToString("F2")</strong>
                                <small class="text-muted">/day</small>
                            </p>
                        </div>
                        <div class="card-footer border-0 d-grid gap-2">
                            <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.CarID" class="btn btn-outline-light">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="bg-primary text-white text-center py-5">
    <div class="container">
        <h2 class="display-5 fw-bold">Ready to Hit the Road?</h2>
        <p class="lead mb-4">Sign up now to get started and book your first car in minutes.</p>
        <a class="btn btn-outline-light btn-lg" asp-controller="Account" asp-action="Register" role="button">Create Account Now</a>
    </div>
</div>