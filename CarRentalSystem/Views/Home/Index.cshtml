@model IEnumerable<CarRentalSystem.Models.Car>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Carousel -->
<div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/cars/carousel4.png" class="d-block w-100" alt="Reliable Cars" style="height:600px; object-fit:cover;">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded-3 p-4">
                <h1 class="display-3 fw-bold text-gold">Drive in Luxury</h1>
                <p class="lead">Experience world-class cars with Carentan</p>
                <a class="btn btn-gold btn-lg mt-3 shadow" asp-controller="Cars" asp-action="Index">Browse All Cars</a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/cars/carousel2.png" class="d-block w-100" alt="Affordable Rates" style="height:600px; object-fit:cover;">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded-3 p-4">
                <h1 class="display-3 fw-bold">Premium Cars, Smart Rates</h1>
                <p class="lead">Daily, weekly or monthly — tailored to you</p>
                <a class="btn btn-outline-light btn-lg mt-3 shadow" asp-controller="Account" asp-action="Register">Join Us Today</a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Featured Cars -->
<div class="container my-5">
    <h2 class="text-center fw-bold mb-5 text-gold">Featured Cars</h2>
    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-lg border-0 rounded-4 overflow-hidden">
                    <img src="@Url.Content(car.ImageUrl)" class="card-img-top" alt="@car.CarName" style="height:240px; object-fit:cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@car.CarName</h5>
                        <p>
                            <span class="badge bg-gold text-dark">@car.CarType</span>
                            <span class="badge bg-dark">@car.Transmission</span>
                        </p>
                        <p class="fs-5 text-success mt-auto fw-bold">$@car.DailyRate.ToString("F2") <small class="text-muted">/day</small></p>
                    </div>
                    <div class="card-footer bg-light border-0">
                        <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.CarID"
                           class="btn btn-outline-gold w-100">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- CTA Banner -->
<div class="text-center bg-dark text-light py-5 luxe-cta">
    <h2 class="display-5 fw-bold">Ready to Hit the Road?</h2>
    <p class="lead mb-4">Sign up now and book your dream car in minutes</p>
    <a class="btn btn-gold btn-lg shadow" asp-controller="Account" asp-action="Register">Create Account Now</a>
</div>
