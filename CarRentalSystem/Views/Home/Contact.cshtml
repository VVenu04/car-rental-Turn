@{
    ViewData["Title"] = "Contact Us";
}
<div class="container my-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-gold">Contact Us</h1>
        <p class="lead text-muted">Have questions? We're here to help.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">Get in Touch</h5>
                    @{
                        var contactSettings = await SiteSettingsService.GetSiteSettingsAsync();
                    }
                    <ul class="list-unstyled mt-4 fs-5">
                        <li class="mb-3"><i class="bi bi-geo-alt-fill text-gold"></i> @contactSettings?.Address</li>
                        <li class="mb-3"><i class="bi bi-telephone-fill text-gold"></i> @contactSettings?.ContactPhone</li>
                        <li class="mb-3"><i class="bi bi-envelope-fill text-gold"></i> @contactSettings?.ContactEmail</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
