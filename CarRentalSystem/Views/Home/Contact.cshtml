@{
    ViewData["Title"] = "Contact Us";
}
@{
    var settings = await SiteSettingsService.GetSiteSettingsAsync();
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #1e3c72, #2a5298);
        min-height: 100vh;
    }

    .browse-contact-background {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 60px 20px;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.08);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.3);
        color: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 36px rgba(0,0,0,0.45);
        }

    .contact-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .contact-list {
        list-style: none;
        padding: 0;
    }

        .contact-list li {
            margin: 20px 0;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            font-size: 1.1rem;
        }

    .icon-circle {
        background: rgba(255, 255, 255, 0.15);
        border-radius: 50%;
        width: 45px;
        height: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.4rem;
        color: #ffc107;
        transition: background 0.3s ease, transform 0.3s ease;
    }

    .contact-list li:hover .icon-circle {
        background: rgba(255, 193, 7, 0.3);
        transform: scale(1.1);
    }

    .contact-list a {
        color: #fff;
        text-decoration: none;
        transition: color 0.3s;
    }

        .contact-list a:hover {
            color: #ffc107;
        }
</style>

<div class="browse-contact-background">
    <div class="glass-card text-center">
        <h1 class="contact-title">Contact Us</h1>
        <p class="mb-4">Have questions? We're here to help.</p>

        <ul class="contact-list">
            <li>
                <span class="icon-circle"><i class="bi bi-geo-alt-fill"></i></span>
                <span>@settings?.Address</span>
            </li>
            <li>
                <span class="icon-circle"><i class="bi bi-envelope-fill"></i></span>
                <a href="mailto:@settings?.ContactEmail">@settings?.ContactEmail</a>
            </li>
            <li>
                <span class="icon-circle"><i class="bi bi-telephone-fill"></i></span>
                <a href="tel:@settings?.ContactPhone">@settings?.ContactPhone</a>
            </li>
        </ul>
    </div>
</div>
