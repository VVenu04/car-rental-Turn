@inject IHttpContextAccessor HttpContextAccessor
@{
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="admin-layout">
        <div class="sidebar sidebar-light">
            <div class="sidebar-header">
                <a asp-controller="Home" asp-action="Index" class="sidebar-brand">
                    <i class="bi bi-car-front-fill"></i> DriveEase
                </a>
            </div>

            <ul class="sidebar-menu nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Admin" && currentAction == "Dashboard" ? "active" : "")" asp-controller="Admin" asp-action="Dashboard">
                        <i class="bi bi-speedometer2"></i><span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Admin" && (currentAction == "ViewCustomers" || currentAction == "CustomerDetails" || currentAction == "CreateCustomer"))" asp-controller="Admin" asp-action="ViewCustomers">
                        <i class="bi bi-people-fill"></i><span>View Customers</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Cars" ? "active" : "")" asp-controller="Cars" asp-action="Index">
                        <i class="bi bi-car-front-fill"></i><span>Manage Cars</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentController == "Bookings" ? "active" : "")" asp-controller="Bookings" asp-action="Index">
                        <i class="bi bi-journal-text"></i><span>All Bookings</span>
                    </a>
                </li>
            </ul>

            <div class="sidebar-footer">
                <a asp-controller="Home" asp-action="Index" class="nav-link">
                    <i class="bi bi-box-arrow-left"></i><span>Back to Main Site</span>
                </a>
            </div>
        </div>
        <div class="main-content">
            <header class="main-header shadow-sm">
                <div class="ms-auto">
                    <span class="navbar-text">Welcome, @username</span>
                </div>
            </header>
            <div class="container-fluid p-4">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>