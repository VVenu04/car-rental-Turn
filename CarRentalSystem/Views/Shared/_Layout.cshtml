@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Carentan</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light" style="font-family:'Inter', sans-serif;">

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm rounded-bottom-3 py-3 luxe-navbar">
            <div class="container">
                <a class="navbar-brand fw-bold" style="font-family:'Playfair Display', serif; color:#D4AF37;"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    Carentan
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link luxe-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link luxe-link" asp-controller="Cars" asp-action="Index">Browse Cars</a></li>
                        <li class="nav-item"><a class="nav-link luxe-link" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </ul>

                    <!-- Right side -->
                    <ul class="navbar-nav">
                        @{
                            var userRole = HttpContextAccessor.HttpContext.Session.GetString("Role");
                            var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
                        }

                        @if (userRole != null)
                        {
                            if (userRole == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-warning fw-semibold" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="bi bi-speedometer2"></i> Admin
                                    </a>
                                </li>
                            }
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle luxe-link" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> Welcome, @username
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow rounded-3">
                                    @if (userRole == "Customer")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">My Profile</a></li>
                                        <li><a class="dropdown-item" asp-controller="Customer" asp-action="MyBookings">My Bookings</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item text-danger">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link luxe-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-gold" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Body -->
    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    @{
        var settings = await SiteSettingsService.GetSiteSettingsAsync();
    }
    <footer class="bg-dark text-light py-4 mt-5 rounded-top-3 shadow luxe-footer">
        <div class="container text-center">
            <p class="mb-1">&copy; @DateTime.Now.Year - Carentan</p>
            <p class="small text-muted">Contact us: <span class="text-gold">@settings?.ContactPhone</span></p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
