@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarRentalSystem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home_Page.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Browse Cars.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Admin Dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Edit profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Car Details.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

    <style>
        .navbar-nav .nav-link, .navbar-nav .btn {
            transition: transform 0.2s ease-in-out;
        }

            .navbar-nav .nav-link:hover, .navbar-nav .btn:hover {
                transform: scale(1.08); /* A nice, consistent zoom effect */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/cars/Velocity Car Rentals-logo.png" alt="CarRentalSystem Logo" height="65" width="148" class="d-inline-block align-middle">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link fs-5 nav-link-custom @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-5 nav-link-custom @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Cars" ? "active" : "")" asp-area="" asp-controller="Cars" asp-action="Index">Browse Cars</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-5 nav-link-custom @(ViewContext.RouteData.Values["Action"]?.ToString() == "Contact" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @{
                            var userRole = HttpContextAccessor.HttpContext.Session.GetString("Role");
                            var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
                        }

                        @if (userRole != null)
                        {
                            if (userRole == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-warning" asp-controller="Admin" asp-action="Dashboard"><i class="bi bi-person-fill-gear"></i> Admin Dashboard</a>
                                </li>
                            }
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> Welcome, @username
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @if (userRole == "Customer")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person-vcard"></i> My Profile</a></li>
                                        <li><a class="dropdown-item" asp-controller="Bookings" asp-action="Index"><i class="bi bi-journal-check"></i> My Bookings</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right"></i> Logout</button>
                                        </form>
                                    </li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person-badge me-2"></i>My Profile</a></li>

                                    @{
                                        var userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserID");
                                        int unreadCount = 0;
                                        if (userId != null)
                                        {
                                            unreadCount = await NotificationService.GetUnreadCountAsync(userId.Value);
                                        }
                                    }
                                    <li>
                                        <a class="dropdown-item d-flex justify-content-between align-items-center" asp-controller="Account" asp-action="Notifications">
                                            <span><i class="bi bi-bell-fill me-2"></i>Notifications</span>
                                            @if (unreadCount > 0)
                                            {
                                                <span class="badge bg-danger rounded-pill">@unreadCount</span>
                                            }
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-success me-2 fs-5" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-primary fs-5" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus-fill"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
        <main role="main">
            @RenderBody()
        </main>
    

    @{
        // Get the settings once for the layout
        var settings = await SiteSettingsService.GetSiteSettingsAsync();
    }

    <footer class="footer bg-dark text-white pt-5 pb-4">
        <div class="container">
            <div class="row text-center text-md-start">
                <div class="col-md-4 col-lg-4 col-xl-4 mx-auto mt-3 d-flex flex-column align-items-center align-items-md-start">
                    <a class="navbar-brand d-block mb-2" href="#">
                        <img src="~/images/cars/Velocity Car Rentals-logo.png" alt="CarRentalSystem Logo" height="65" width="148" class="img-fluid">
                    </a>
                    <p class="tagline text-white mb-0">Your journey starts here.</p>
                    <p class="tagline text-white mt-0">Rent with confidence, drive with style.</p>
                    <span class="d-block text-white mt-3">&copy; @DateTime.Now.Year - CarRentalSystem</span>
                </div>

                <div class="col-md-4 col-lg-4 col-xl-4 mx-auto mt-3">
                    <h5 class="text-uppercase fw-bold mb-4 text-warning">Quick Links</h5>
                    <ul class="list-unstyled quick-links">
                        <li><a class="text-white text-decoration-none" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a class="text-white text-decoration-none" asp-controller="Cars" asp-action="Index">Browse Cars</a></li>
                        <li><a class="text-white text-decoration-none" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li><a class="text-white text-decoration-none" asp-controller="Account" asp-action="Register">Register</a></li>
                    </ul>
                </div>

                <div class="col-md-4 col-lg-4 col-xl-4 mx-auto mt-3">
                    <h5 class="text-uppercase fw-bold mb-4 text-warning">Connect with Us</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-geo-alt-fill text-warning me-2"></i>
                            <span class="text-white">@settings?.Address</span>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-envelope-fill text-warning me-2"></i>
                            <a href="mailto:@settings?.ContactEmail" class="text-white text-decoration-none">@settings?.ContactEmail</a>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone-fill text-warning me-2"></i>
                            <a href="tel:@settings?.ContactPhone" class="text-white text-decoration-none">@settings?.ContactPhone</a>
                        </li>
                    </ul>
                    <div class="mt-3 d-flex justify-content-center justify-content-md-start">
                        <a href="#" class="text-white me-3 social-icon"><i class="bi bi-facebook fs-4"></i></a>
                        <a href="#" class="text-white me-3 social-icon"><i class="bi bi-twitter fs-4"></i></a>
                        <a href="#" class="text-white social-icon"><i class="bi bi-instagram fs-4"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <a href="#top" id="backToTopBtn" class="btn btn-outline-light btn-lg rounded-circle position-fixed bottom-0 end-0 me-3 mb-3 d-none" style="z-index: 1050;">
            <i class="bi bi-arrow-up"></i>
        </a>
    </footer>




    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>